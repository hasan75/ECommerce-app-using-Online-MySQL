<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Today's offer"
            android:textStyle="bold"
            android:textColor="#7CC651"
            android:textAlignment="center"
            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/first_offer_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/first_offer_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="first"
            android:textStyle="bold"
            android:textColor="#7CC651"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/first_offer_button"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Add all to cart"
            android:textColor="#476FD8"
            android:background="#C5BB43  "/>

    </LinearLayout>



    <android.support.v7.widget.RecyclerView

        android:id="@+id/second_offer_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/second_offer_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="first"
            android:textStyle="bold"
            android:textColor="#7CC651"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/second_offer_button"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Add all to cart"
            android:textColor="#476FD8"
            android:background="#C5BB43  "/>

    </LinearLayout>


</LinearLayout>