<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:xmls="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:id="@+id/offer_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4.0dp"
    android:layout_marginLeft="8.0dp"
    android:layout_marginRight="8.0dp"
    android:layout_marginTop="4.0dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/offer_cardview_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/offer_item_image"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            fresco:placeholderImage="@color/color_stay"/>

        <LinearLayout
            android:id="@+id/cardview_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.8">

                <TextView
                    android:id="@+id/offer_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>



            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>